<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="wrap_content"
                                             android:layout_height="wrap_content">

    <TextView
            android:text="textview"
            android:textSize="24dp"
            android:layout_width="368dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:id="@+id/textViewFruitName"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="textView"
            android:textSize="24dp"
            android:layout_width="368dp"
            android:textAlignment="textStart"
            android:layout_height="wrap_content"
            android:id="@+id/textViewFruitUses"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewFruitName"
            app:layout_constraintStart_toStartOf="@+id/textViewFruitName"
            app:layout_constraintEnd_toEndOf="@+id/textViewFruitName"/>
</android.support.constraint.ConstraintLayout>
